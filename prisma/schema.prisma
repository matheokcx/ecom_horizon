generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model user {
  idUser   Int     @id
  mail     String
  password String
  name     String?
}

model product {
  idProduct          Int        @id
  name               String
  minPrice           Float
  maxPrice           Float
  imagePath          String
  favorite           favorite[]
  supplier           supplier?  @relation(fields: [supplierIdSupplier], references: [idSupplier])
  supplierIdSupplier Int?
}

model favorite {
  idFavorite Int     @id
  product    product @relation(fields: [idProduct], references: [idProduct])
  idProduct  Int
}

model supplier {
  idSupplier Int       @id
  name       String
  products   product[]
}
